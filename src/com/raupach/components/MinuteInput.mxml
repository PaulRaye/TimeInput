<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark" xmlns:fx="http://ns.adobe.com/mxml/2009">
	<fx:Metadata>[HostComponent("spark.components.TextInput")]</fx:Metadata>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Rect height="13" id="rect1" width="15" x="0" y="0">
		<s:fill>
			<s:SolidColor color="#FFFFFF"/>
		</s:fill>
	</s:Rect>
	<s:RichEditableText heightInLines="1" id="textDisplay" width="15"  x="0" y="2" fontFamily="Arial" color="#000000"/>
	<s:transitions>
		<s:Transition autoReverse="true" fromState="normal" toState="disabled">
			<s:Parallel>
				<s:Parallel target="{textDisplay}">
					<s:Resize duration="0"/>
					<s:Move duration="0" autoCenterTransform="true"/>
				</s:Parallel>
				<s:Parallel target="{rect1}">
					<s:Resize duration="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
</s:Skin>
